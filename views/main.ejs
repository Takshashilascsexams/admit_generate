      function downloadPDF() {
        window.jsPDF = window.jspdf.jsPDF;
        var doc = new jsPDF();
        var elementHTML = document.querySelector("#admitCard");
        doc.html(elementHTML, {
          callback: function (doc) {
            doc.save("screening_test_admitcard.pdf");
          },
          margin: [2, 2, 2, 2],
          autoPaging: "text",
          x: 0,
          y: 0,
          width: 187.5,
          windowWidth: 675,
          height: 200,
        });
      }
